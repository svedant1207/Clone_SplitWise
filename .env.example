# Flask Configuration
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-secure-random-string

# Flask Environment (production/development)
FLASK_ENV=production

# Database path (inside container)
# Default: /data/splitwise.db (persisted via Docker volume)
DATABASE_PATH=/data/splitwise.db

# Gunicorn workers (optional, defaults to 4)
# Recommended: 2 * CPU cores + 1
GUNICORN_WORKERS=4
